<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:layout_centerInParent="true">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/jupaju" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Produsen Pesawat"
        android:gravity="center"
        android:textColor="@color/item"
        android:textSize="30dp"
        android:typeface="monospace"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/boeing"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:background="@drawable/boeing" />

        <Button
            android:id="@+id/airbus"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:background="@drawable/airbus"/>

        <Button
            android:id="@+id/sukhoi"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:background="@drawable/sukhoi"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/embraer"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:background="@drawable/embraer"/>

        <Button
            android:id="@+id/bombardier"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:background="@drawable/bombardier"/>

        <Button
            android:id="@+id/fokker"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:background="@drawable/fokker"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/atr"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:background="@drawable/atr"/>

    </LinearLayout>

</LinearLayout>